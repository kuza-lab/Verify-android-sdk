<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="6dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout

            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Registration No"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/registration_no"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout

            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Contractor Name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/contractor_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout

            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Town"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:id="@+id/town"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout

            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Category"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:id="@+id/category"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout

            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Class"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:id="@+id/_class"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>